
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutModerator.cshtml";
}

<h2>Home</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Moderator</h4>
        
        <h2>Welcome @Session["UserName"]</h2>
        <hr />
        @Html.ValidationSummary(true)
        @*@Html.HiddenFor(model => model.Id, new { id = "txtId", Value = @ViewBag.moderator.Id })*@

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="button" value="Add Movie" class="btn btn-default" onclick="location.href = '@Url.Action("AddMovie", "Moderators")'" />
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="button" value="Browse Movies" class="btn btn-default" onclick="location.href = '@Url.Action("BrowseMovies", "Moderators")'" />
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="button" value="Browse Customers" class="btn btn-default" onclick="location.href = '@Url.Action("BrowseCustomers", "Moderators")'" />
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="button" value="Rental History" class="btn btn-default" onclick="location.href = '@Url.Action("RentalHistory", "Moderators")'" />
            </div>
        </div>
    </div>
}