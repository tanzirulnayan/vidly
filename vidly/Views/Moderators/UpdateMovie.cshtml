@model vidly.Models.MovieViewModel

@{
    ViewBag.Title = "Update Movie";
    Layout = "~/Views/Shared/_LayoutModerator.cshtml";
}

<h2>Update Movie</h2>

@using (Html.BeginForm("UpdateMovie", "Moderators", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Moderator</h4>
        <hr />
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(model => model.Movie.Id, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayTextFor(model => model.Movie.Id)
                @Html.ValidationMessageFor(model => model.Movie.Id)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Movie.Name, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Movie.Name)
                @Html.ValidationMessageFor(model => model.Movie.Name)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Movie.Genre, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Movie.Genre)
                @Html.ValidationMessageFor(model => model.Movie.Genre)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Movie.Year, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Movie.Year)
                @Html.ValidationMessageFor(model => model.Movie.Year)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Movie.BorrowCount, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Movie.BorrowCount)
                @Html.ValidationMessageFor(model => model.Movie.BorrowCount)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Movie.ImagePath, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" name="ImageFile" />
                @*@Html.TextBoxFor(model => model.ImageFile, new { type = "file" })
                @Html.ValidationMessageFor(model => model.ImageFile)*@
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
