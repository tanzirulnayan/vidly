
@{
    ViewBag.Title = "Rents";
    Layout = "~/Views/Shared/_LayoutModerator.cshtml";
}
<h2>Rents</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Moderator</h4>
        <hr />
        @Html.ValidationSummary(true)
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="button" value="Pending Rentals" class="btn btn-default" onclick="location.href = '@Url.Action("PendingRentals", "Moderators")'" />
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="button" value="Expired Pending Rentals" class="btn btn-default" onclick="location.href = '@Url.Action("ExpiredPendingRentals", "Moderators")'" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="button" value="Rental History" class="btn btn-default" onclick="location.href = '@Url.Action("RentalHistory", "Moderators")'" />
            </div>
        </div>
    </div>
}
