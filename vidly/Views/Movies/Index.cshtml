@using vidly.Controllers
@model IEnumerable<vidly.Models.MovieViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>Id</th>
        <th>Movie Name</th>
        <th>Genre</th>
        <th>Year</th>
    </tr>
    
    @foreach (var movie in ViewBag.movies)
    {
        <tr>
            <td>@movie.Id</td>
            <td>@movie.Name</td>
            <td>@movie.Genre</td>
            <td>@movie.Year</td>
        </tr>
    }
</table>

