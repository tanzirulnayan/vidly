@using vidly.Controllers
@model IEnumerable<vidly.Models.MovieViewModel>

@{
    ViewBag.Title = "MovieList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>MovieList</h2>


<table class="table">
    <tr>
        <th>Id</th>
        <th>Movie Name</th>
        <th>Genre</th>
        <th>Year</th>
    </tr>

    @foreach (var movie in ViewBag.movies)
    {
        <tr>
            <td>@movie.Id</td>
            <td>@movie.Name</td>
            <td>@movie.Genre</td>
            <td>@movie.Year</td>
        </tr>
    }
</table>

